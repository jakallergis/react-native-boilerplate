{
  "name": "ReactNativeBoilerplate",
  "version": "0.1.0",
  "description": "A React Native Boilerplate app using React Navigation, Redux and Realm, with full integration of Redux and Navigation",
  "author": {
    "name": "J. A. Kallergis",
    "email": "j.a.kallergis@gmail.com",
    "url": "https://github.com/jakallergis"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jakallergis/react-native-boilerplate.git"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "rm -rf ./test_database && jest"
  },
  "dependencies": {
    "@types/jest": "^22.2.2",
    "bluebird": "^3.5.1",
    "react": "^16.3.0",
    "react-native": "0.54.4",
    "react-navigation": "^1.5.9",
    "react-navigation-redux-helpers": "^1.0.3",
    "react-redux": "^5.0.7",
    "realm": "^2.3.3",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-jest": "22.4.3",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react-native": "4.0.0",
    "babel-preset-react-native-stage-0": "^1.0.1",
    "flow-bin": "^0.64.0",
    "jest": "22.4.3",
    "react-test-renderer": "^16.3.0",
    "reactotron-react-native": "^5.0.3"
  },
  "jest": {
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|react-navigation)/",
      "node_modules/(realm)/"
    ],
    "testMatch": [
      "**/__tests__/**/?(*.)(spec|test).js?(x)"
    ],
    "verbose": true,
    "setupTestFrameworkScriptFile": "<rootDir>/__tests__/setup.js",
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "keywords": [
    "react",
    "react-native",
    "react-navigation",
    "redux",
    "react-redux",
    "redux-thunk",
    "realm",
    "realmjs",
    "flow"
  ]
}
